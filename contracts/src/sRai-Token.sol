contract sRAI is ERC20, Ownable {
    uint256 public rebaseIndex = 1 ether;
    address public stakingContract; 
    address public stakingLongContract; 
    address public warmupContract;
    bool public rebasePaused = false;
    mapping(address => uint256) private _gons;
    uint256 private _totalGonsSupply; 

    event Rebase(uint256 indexed epoch, uint256 distribute, uint256 circulatingSupply);
    event RebasePaused(bool paused);
    event Burn(address indexed burner, uint256 amount);
    event ContractAddressUpdated(CONTRACTS indexed contractType, address indexed oldAddress, address indexed newAddress);

  constructor(address _stakingContract,address _warmupContract,address _stakingLongContract) 
    ERC20("Staked RAI", "sRAI") Ownable(msg.sender) {
        require(_stakingContract != address(0), "Contract address cannot be zero");
        require(_warmupContract != address(0), "Contract address cannot be zero");
        require(_stakingLongContract != address(0), "Contract address cannot be zero");
        stakingContract=_stakingContract;
        warmupContract=_warmupContract;
        stakingLongContract=_stakingLongContract;
    }

    modifier onlyStaking() {
        require(msg.sender == stakingContract || msg.sender == stakingLongContract, "Only staking contract can call this function");
        _;
    }
    enum CONTRACTS {STAKING, WARMUP,STAKINGLONG}
    function setContract(CONTRACTS _contract, address _address) external onlyOwner {
        require(_address != address(0), "Contract address cannot be zero");
        address oldAddress; 
        if(_contract==CONTRACTS.STAKING)
        {
            oldAddress = stakingContract;
            stakingContract = _address;
        }
        else if(_contract==CONTRACTS.WARMUP)
        {
            oldAddress = warmupContract;
             warmupContract = _address;
        }
        else if(_contract==CONTRACTS.STAKINGLONG)
        {
            oldAddress = stakingLongContract;
            stakingLongContract = _address;
        }
        emit ContractAddressUpdated(_contract, oldAddress, _address);
    }

    function pauseRebase(bool _paused) external onlyOwner {
        rebasePaused = _paused;
        emit RebasePaused(_paused);
    }

    /**
     * @notice Mints new tokens and the corresponding gons. Can only be called by the staking contract.
     * @param account The account to mint to.
     * @param amount The amount of tokens to mint.
     */
    function mint(address account, uint256 amount) external onlyStaking {
        require(account != address(0), "sRAI: mint to the zero address");
        _mint(account, amount);
    }

    /**
     * @notice Burns tokens and the corresponding gons. Can only be called by specific contracts (e.g., ReleasePool).
     * @param account The account to burn from.
     * @param amount The amount of tokens to burn.
     */
    function burn(address account, uint256 amount) external onlyStaking{
        require(account != address(0), "sRAI: burn from the zero address");
        _burn(account, amount);
        emit Burn(account, amount);
    }

    function balanceOf(address account) public view override returns (uint256) {
        if (_gons[account] == 0) {
            return 0;
        }
        return (_gons[account] * rebaseIndex) / 1 ether;
    }
    function totalSupply() public view override returns (uint256) {
        if (_totalGonsSupply == 0) {
            return 0;
        }
        return (_totalGonsSupply * rebaseIndex) / 1 ether;
    }
    function _transfer(address sender, address recipient, uint256 amount) internal override {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");
        uint256 gonsAmount = _toGons(amount);
        require(_gons[sender] >= gonsAmount, "ERC20: transfer amount exceeds balance");
        _gons[sender] -= gonsAmount;
        _gons[recipient] += gonsAmount;
        emit Transfer(sender, recipient, amount);
    }
    function _mint(address account, uint256 amount) internal override {
        require(account != address(0), "ERC20: mint to the zero address");
        uint256 gonsAmount = _toGons(amount);
        _totalGonsSupply += gonsAmount;
        _gons[account] += gonsAmount;
        emit Transfer(address(0), account, amount);
    }
     function _burn(address account, uint256 amount) internal override {
        require(account != address(0), "ERC20: burn from the zero address");
        require(_gons[account] >= _toGons(amount), "ERC20: burn amount exceeds balance");
        uint256 gonsAmount = _toGons(amount);
        _gons[account] -= gonsAmount;
        _totalGonsSupply -= gonsAmount;
        emit Transfer(account, address(0), amount);
    }
    function _toGons(uint256 amount) internal view returns (uint256) {
        if (amount == 0) return 0;
        require(rebaseIndex > 0, "Rebase index cannot be zero for conversion");
        return (amount * 1 ether) / rebaseIndex;
    }
    function _fromGons(uint256 gonsAmount) internal view returns (uint256) {
        return (gonsAmount * rebaseIndex) / 1 ether;
    }
    /**
     * @notice Applies the rebase to update the gons per fragment.
     * @param distribute The amount of new RAI to distribute.
     * @param epoch The current epoch number.
     */
    function rebase(uint256 distribute, uint epoch) external onlyStaking {
        if (rebasePaused || distribute==0) {
            return;
        }
        uint256 currentSupply = totalSupply();
        if (currentSupply == 0) {
            return;
        }
        uint256 rewardRatio = (distribute * 1 ether) / currentSupply;
        uint256 growthRatio = rewardRatio + 1 ether;
        rebaseIndex = (rebaseIndex * growthRatio) / 1 ether;
        emit Rebase(epoch, distribute, currentSupply);
    }
    function index() public view returns (uint256) {
        return rebaseIndex;
    }
}